{
    "author": "Toan Nguyen Ba",
    "name": "@joker7t/common-utils",
    "version": "1.0.3",
    "description": "This is a simple code share, contains some useful functions which you can use to make your work easier ✌️✌️",
    "keywords": [
        "common-utils"
    ],
    "main": "./build/index.js",
    "types": "./build/index.d.ts",
    "files": [
        "build/**/*"
    ],
    "scripts": {
        "dev": "tsc --watch --preserveWatchOutput",
        "build": "tsc",
        "prepublishOnly": "yarn build",
        "pub": "npm test && git add . && git commit -m \"update version\" && git push origin master && npm version patch && yarn build && yarn publish",
        "test": "NODE_ENV=test yarn lint && jest --config jest.config.js",
        "test:watch": "NODE_ENV=test yarn lint && jest --config jest.config.js --watch",
        "test:ci": "CI=true yarn test",
        "coverage": "yarn test --coverage",
        "postcoverage": "open-cli coverage/lcov-report/index.html",
        "lint": "eslint . --ext js,ts,tsx --fix"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/joker7t/common-js-code.git"
    },
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/joker7t/common-js-code/issues"
    },
    "homepage": "https://github.com/joker7t/common-js-code#readme",
    "devDependencies": {
        "@testing-library/react": "^12.1.4",
        "@testing-library/react-hooks": "^7.0.2",
        "@types/jest": "^27.4.1",
        "@types/lodash": "^4.14.182",
        "@types/react": "^17.0.43",
        "@typescript-eslint/eslint-plugin": "^5.15.0",
        "@typescript-eslint/parser": "^5.15.0",
        "enzyme-to-json": "^3.6.2",
        "eslint": "^8.11.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-prettier": "^4.0.0",
        "ignore-styles": "^5.0.1",
        "jest": "^27.5.1",
        "jest-sonar-reporter": "^2.0.0",
        "lint-staged": "^11.0.0",
        "open-cli": "6.0.1",
        "prettier": "^2.4.0",
        "ts-jest": "^27.1.3",
        "typescript": "^4.6.2",
        "typescript-plugin-styled-components": "^2.0.0"
    },
    "dependencies": {
        "@types/express": "^4.17.13",
        "enzyme": "^3.11.0",
        "express": "^4.17.1",
        "express-validator": "^6.12.1",
        "jest-mock-extended": "^2.0.6",
        "lodash": "^4.17.21",
        "react": "^17.0.2",
        "react-test-renderer": "^17.0.2"
    },
    "lint-staged": {
        "*.{js,ts,jsx}": [
            "yarn lint"
        ]
    },
    "jestSonar": {
        "reportPath": "reports",
        "reportFile": "test-reporter.xml",
        "indent": 4
    }
}
