{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": ["es6", "es5", "es7", "dom"],
        "allowJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "outDir": "./dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "jsx": "react"
    },
    "exclude": ["node_modules", "dist"]
}
