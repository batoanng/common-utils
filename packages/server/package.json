{
    "author": "Toan Nguyen Ba",
    "name": "@joker7t/common-server",
    "version": "1.0.0",
    "description": "",
    "publishConfig": {
        "access": "public"
    },
    "main": "./build/index.js",
    "types": "./build/index.d.ts",
    "files": [
        "build/**/*"
    ],
    "scripts": {
        "dev": "tsc --watch --preserveWatchOutput",
        "build": "tsc",
        "prepublishOnly": "yarn build",
        "test": "NODE_ENV=test jest --config jest.config.js",
        "test:watch": "NODE_ENV=test jest --config jest.config.js --watch",
        "test:ci": "CI=true yarn test",
        "coverage": "yarn test --coverage",
        "postcoverage": "open-cli coverage/lcov-report/index.html",
        "lint": "eslint src --ext js,ts,tsx --fix"
    },
    "license": "ISC",
    "homepage": "https://github.com/joker7t/common-utils/packages/server/#readme",
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/jsonwebtoken": "^8.5.8"
    },
    "dependencies": {
        "@joker7t/common-core": "^1.0.0",
        "express": "^4.17.1",
        "express-validator": "^6.12.1",
        "jsonwebtoken": "^8.5.1"
    },
    "lint-staged": {
        "*.{js,ts,jsx}": [
            "yarn lint"
        ]
    },
    "jestSonar": {
        "reportPath": "reports",
        "reportFile": "test-reporter.xml",
        "indent": 4
    }
}
